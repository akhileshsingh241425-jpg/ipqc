# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=your_hostinger_db_user
MYSQL_PASSWORD=your_hostinger_db_password
MYSQL_DB=your_hostinger_db_name

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
FLASK_ENV=production
DEBUG=False

# File Upload Configuration
MAX_CONTENT_LENGTH=524288000
UPLOAD_FOLDER=uploads
GENERATED_PDF_FOLDER=generated_pdfs

# CORS Configuration (Frontend URL)
FRONTEND_URL=https://your-frontend-domain.com
# Azure Computer Vision OCR Configuration (for certificate scanning)
AZURE_CV_KEY=your_azure_computer_vision_key_here
AZURE_CV_ENDPOINT=https://your-resource.cognitiveservices.azure.com

# Groq AI Configuration (for certificate data extraction)
GROQ_API_KEY=your_groq_api_key_here